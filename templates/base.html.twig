<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('assets/css/stylesheets.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/nav.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/progressbar.css') }}">
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        <header class="p-3 bg-brown text-white mb-3">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                        <li><a href="{{ path('app_home') }}" class="nav-link px-2 text-white">Accueil</a></li>
                        {% if app.user is not null %}
                            <li><a href="{{ path('game_view') }}" class="nav-link px-2 text-white">Vue</a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Profil
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Profil</a></li>
                                    <li><a class="dropdown-item" href="#">Evolution</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Inventaire
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="{{ path('equipment_weapons') }}">Armes</a></li>
                                    <li><a class="dropdown-item" href="#">Armures</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Messagerie
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Reçus</a></li>
                                    <li><a class="dropdown-item" href="#">Envoyés</a></li>
                                    <li><a class="dropdown-item" href="#">Nouveau</a></li>
                                </ul>
                            </li>
                        {% endif %}
                        <li><a href="{{ path('app_home') }}" class="nav-link px-2 text-white">Règles du jeu</a></li>
                    </ul>

                    <div class="text-end">
                        {% if app.user is null %}
                            <a href="{{ path('app_login') }}" class="btn btn-outline-light me-2">Connexion</a>
                            <a href="{{ path('app_register') }}" class="btn btn-warning">Inscription</a>
                        {% else %}
                            <a href="{{ path('app_logout') }}" class="btn btn-warning">Déconnexion</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </header>
        <main class="container">
            {% block top %}{% endblock %}
            {% block body %}{% endblock %}
        </main>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script type="application/javascript" src="{{ asset('assets/js/nav.js') }}"></script>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
